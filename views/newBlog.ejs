<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <main>
        <section class="py-5">
            <div class="container-lg">
                <div class="row">
                    <div class="col-6 mx-auto">
                        <form action="/blogs" method="POST" class="text-light">
                            <div class="mb-3">
                                <label for="blogTitle" class="ms-3 fs-3 form-label">Blog Title</label>
                                <input type="text" name="title" id="blogTitle" class="form-control p-3">
                            </div>
                            <div class="mb-3">
                                <label for="blogAuthor" class="ms-3 fs-3 form-label">Blog Author</label>
                                <input type="text" name="author" id="blogAuthor" class="form-control p-3">
                            </div>
                            <div class="mb-3">
                                <label for="blogBody" class="ms-3 fs-3 form-label">Blog Body</label>
                                <textarea type="text" name="body" id="blogBody" class="form-control p-3" rows="7"></textarea>
                            </div>
                            <div class="mb-3 text-center">
                                <button class="btn btn-light btn-block btn-lg">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>